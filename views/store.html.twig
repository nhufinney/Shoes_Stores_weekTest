
<h1>Shoes Store: {{ store.getStore }}</h1>

{% if related_shoes is not empty %}
    <p>Here are the brands of shoes ON SALE in this store! HURRY UP!:</p>
    <ul>
        {% for shoes in related_shoes %}
            <li>{{ shoes.getShoes }}</li>
        {% endfor %}
    </ul>
{% endif %}

<form action='/add_shoes' method='post'>
    <input id="store_id" name="store_id" type="hidden" value="{{ store.getId }}">
    <label for="shoes_id">Add a new brand of shoes to this store</label>
    <select id='shoes_id' name='shoes_id' type='text'>
      {% for shoes in all_shoes %}
        <option value="{{ shoes.getId }}"> {{ shoes.getShoes }} </option>
      {% endfor %}
    </select>
    <button type='submit'>Add shoes for this store</button>
</form>
<br><br><br>
<form action="/stores/{{ store.getId }}" method="post">
          <input name="_method" type="hidden" value="patch">

          <label for="store">Rename this store:</label>
          <input id="store" name="store" type="text">

          <button type="submit">Rename</button>
        </form>

        <form action="/stores/{{ store.getId }}" method="post">
          <input name="_method" type="hidden" value="delete">

          <button type="submit">Delete this store!</button>
        </form>
<p><a href='/'>Home Page</a></p>
